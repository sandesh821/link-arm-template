{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "storage":{
      "type": "string"
    },
    "appservice": {
      "type": "string",
      "metadata": {
        "description": "description"
      }
    },
    "synapse": {
      "type": "string",
      "metadata": {
        "description": "description"
      }

    },
    "dataFactory": {
      "type": "string",
      "metadata": {
        "description": "description"
      }
    },
    "keyvaults": {
      "type": "string",
      "metadata": {
        "description": "description"
      }
    }



    },
    "resources": [
      {
        // storage account
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "storage-child",
        "properties": {
          "mode": "Incremental",
          "templateLink":{
            "uri": "[concat(parameters('storage'), 'storageaccount.json')]"
          },
          "parametersLink": {
            "uri": "[concat(parameters('storage'), 'storage.parameters.json')]"  
        }
       }
      },

      {
        // app service child
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "app-service-child",
        "properties": {
          "mode": "Incremental",
          "templateLink":{
            "uri": "[concat(parameters('appservice'), 'appservice.json')]"
          },
          "parametersLink": {
            "uri": "[concat(parameters('appservice'), 'appservice.parameters.json')]"  
        }
      }
      },
      {
        //child data factory storage account
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "datafactory-child",
        "properties": {
          "mode": "Incremental",
          "templateLink":{
            "uri": "[concat(parameters('dataFactory'), 'datafactory.json')]"
          },
          "parametersLink": {
            "uri": "[concat(parameters('dataFactory'), 'datafactory.parameters.json')]"  
        }
      }
      },
      {
        //child synapse storage account
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "synapse-child",
        "properties": {
          "mode": "Incremental",
          "templateLink":{
            "uri": "[concat(parameters('synapse'), 'synapse.json')]"
          },
          "parametersLink": {
            "uri": "[concat(parameters('synapse'), 'synapse.parameters.json')]"  
        }
      }
      },
      {
        //child key vault 
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2021-04-01",
        "name": "keyVaults-child",
        "properties": {
          "mode": "Incremental",
          "templateLink":{
            "uri": "[concat(parameters('keyvaults'), 'keyvault.json')]"
          },
          "parametersLink": {
            "uri": "[concat(parameters('keyvaults'), 'keyvault.parameters.json')]"  
        }
      }
      }


      
    ],
    "outputs": {}
  }